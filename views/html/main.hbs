<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="../images/icons8-music-robot-96 (1).ico">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="../css/main.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.21/lodash.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js" integrity="sha512-AA1Bzp5Q0K1KanKKmvN/4d3IRKVlv9PYgwFPvm32nPO6QS8yH1HO7LbgB1pgiOxPtfeg5zEn2ba64MUcqJx6CA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- ../ to go one folder back -->
    <title>MusixON</title>
</head>
<body>
    <div class="main">
        <section class="loading">
            <img src="../images/loadingpage.gif" alt="">
            {{!-- <img style="width:50%;height:auto;"src="../images/loadingname.gif" alt=""> --}}
        </section>
        <section class="head">
            <ul id="navbar"> 
                <div id="navleft" style="display: flex;position: absolute; left: 2px;">
                   
                    <li> <a href="#"><img id="logo" src="../images/icons8-music-robot-96 (1).ico" alt="" class="logo"></a></li>
                    <li><a href="/main">Music</a></li>
                    {{!-- <li><a href="/playlist">My Playlist</a></li> --}}

                    
                </div>
                 
                <div class="sbar">
                    <input type="search" placeholder="Search" aria-label="Search" id="searchbar">
                    <li><button id="searchbutton">Search</button></li>
                </div>

                
                <div id="navright" style="display: flex;position: absolute; right: 2px;">
                   {{#if flag }}
                    <li><a href="/login" id="user">Login</a></li>
                    <li><a href="/signup">Sign Up</a></li>
                   <li><a href="" id="useremail" style="opacity: 0%;display:none">Login</a></li>
                    {{else}}
                    <li><a href="" id="useremail" style="opacity: 0%;display:none">{{useremail}}</a></li>
                    <i class="bi bi-person-circle" id="profilepage"></i>
                    <li id="sbtn"><a id="user">{{username}}</a></li>
                  {{/if}}
                </div>
            </ul>   
        </section>
      <section class="container show">
             <div class="content">    
            </div>
        </section>

        <section class="usercontainer userhide">
            <div class="left_panel">
                <ul class="user_links">
                    <li id="playlistsongs"><a href="" style="pointer-events: none"><i class="bi bi-music-note"></i><h4>My Playlist</h4></a></li>
                    <li id="likedsongs"><a href="" style="pointer-events: none" ><i class="bi bi-heart"></i><h4>Liked Songs</h4></a></li>

                    <li id="historysong"><a href="" style="pointer-events: none"><i class="bi bi-clock-history"></i><h4>History</h4></a></li>
                    <li id="setting"><a href="" style="pointer-events: none"><i class="bi bi-gear"></i><h4>Settings</h4></a></li>
                    <li><a href="/logout"><i class="bi bi-power"></i><h4>Log out</h4></a></li>
                </ul>
            </div>
            {{!-- <div class="left_panel">
                <ul class="user_links">
                    <li><a href=""><i class="bi bi-music-note"></i><h4>My Playlist</h4></a></li>
                    <li><a href=""><i class="bi bi-heart"></i><h4>Liked Songs</h4></a></li>
                    <li><a href=""><i class="bi bi-earbuds"></i><h4>Liked Artist</h4></a></li>
                    <li><a href=""><i class="bi bi-clock-history"></i><h4>History</h4></a></li>
                    <li><a href=""><i class="bi bi-gear"></i><h4>Settings</h4></a></li>
                    <li><a href=""><i class="bi bi-power"></i><h4>Log out</h4></a></li>
                </ul>
            </div> --}}
            <div class="cent">
                <div class="top">
                    <img src="../images/pngwing.com.png" alt="">
                    {{!-- <img src="../images/song1.jpg" alt=""> --}}
                <h2 id="userpagename">{{username}}</h2>
                 
                <h4 id="userpageemail" style="margin-right:0%; ">{{useremail}}</h4>
                </div>
                <div class="content">     
                            <h3>Profile</h3>    
                </div>
            </div>
        </section>
        <section class="queue" id="queueid">
            <div class="queue_head">
                <h3>Queue</h3>
                <div class="queue_buttons">
                </div>
            </div> 
        </section>
          <section class="music_player">

            <div class="progress_bar">
                <input type="range" name="" id="played_length" min="0" max="100" value="0">
                <div id="bar">
                    <div id="point"></div>
                </div>
            </div>        
            
            <div class="song_detail" >
                <img id="current_image" src="../images/song1.jpg" alt="">
                <div id="current_song">
                    <h4 id="currentTitle">Deva Deva (From "Brahmastra")</h4>
                    <h5 id="currentArtists">Pritam, Arijit Singh, Jonita Gandhi, Amitabh Bhattacharya, T Series</h5>
                </div>
            </div>
            
            <i id='queue_icon'class="bi bi-music-note-list"></i>
            <div class="icons">
                <i id="queue_mode" class="bi bi-repeat"></i>
                <i class="bi play bi-skip-start-fill" id="play_back"></i>
                <i id="music_play_icon" class="bi play bi-play-fill"></i>
                <i class="bi play bi-skip-end-fill" id="play_next"></i>
                <i id="shuffle_icon" class="bi bi-shuffle inactive"></i> 
            </div>

            <i class="bi bi-download"  id="downloadbtn"><a id="down" href=""></a></i> 
            {{!-- <i class="bi bi-three-dots" id="menu_icon"></i>
<div class="player_menu" >
            
            <li class="newplaylist" id=""><i class="bi bi-plus-circle" id=""></i>Add to New playlist</li>
             <li class="existone" id=""><i class="bi bi-file-music-fill" id=""></i>Add to Existing playlist</li>
             <li class="likeit" id=""><i class="likeicon bi bi-heart" id=""></i>Add to Liked Songs</li>
             <li class="downloadit" id="downloadbtn"><i class="bi bi-download"  id=""><a id="down" href=""></a></i>Download</li>
             
            </div> --}}
            <div class="music_time" style="display:flex;">
                <div id="current_time">00:00</div>
                <span>/</span>
                <div id="end_time">05:41</div>
            </div>
            
            <div class="volume" >
                <i class="bi bi-volume-up-fill" id="volume_icon"></i>
                <input type="range" name="" id="current_volume" value="60" min="0" max="100" value="0">
                <div id="bar2"></div>
                <div id="vol_bar">
                    <div id="vol_point"></div>
                </div>
            </div>
        </section>
        <div class="searchresult" id="searchresultbox">          
        </div>
                
 <div class="popup">
        <div class="close-btn"><button id="close">X</button></div>
        <div class="form">
            <h2 id="downloadtext">To Download.Subcribe First</h2>
            <h4 id="secondline" style="margin-left:20px;">Subcribe first and explore the world of music</h4>
            
                <button id="subscribebtn" >Subscribe</button>
            
        </div>
    </div>
   

     <div class="popupforlogin">
        <div class="close-btn"><button id="close1">X</button></div>
        <div class="form">
            <h2 id="logintxt">You have to Login First</h2>
            
            <button id="loginbtn" onclick="window.location='/login'">Login</button>
            
            
        </div>
    </div>
    
     <div class="playlistname">
        <div class="close-btn"><button id="close2">X</button></div>
        <div class="form">
            <h2 id="name_playlist">Enter The Playlist Name</h2>
            <h1  id="hiddenlink"style="display: none;"></h1>
            <input type="text" id="newname" placeholder="Enter the name of playlist" >
            <div class="form-element">
                <button id="createbutton">Create</button>
            </div>
            
        </div>
    </div>
     <div class="existingplaylist">
        <div class="close-btn"><button id="close3">X</button></div>
        <div class="form">
           
        </div>
    </div>
    </div>
</body>
<script type="module" src="../js/main1.js"></script>
<script type="module" src="../js/player.js"></script>
<script type="module" src="../js/user.js"></script>
<script type="module" src="../js/search.js"></script>
</html>